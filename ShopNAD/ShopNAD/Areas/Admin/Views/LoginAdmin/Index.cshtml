@model ShopNAD.Areas.Admin.Models.AdminModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Đăng nhập trang quản trị Shop NAD</title>

    <!-- Core CSS - Include with every page -->
    <link href="~/Assets/Admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Assets/Admin/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- SB Admin CSS - Include with every page -->
    <link href="~/Assets/Admin/css/sb-admin.css" rel="stylesheet">

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Shop NAD</h3>
                    </div>
                    <div class="panel-body">
                        @Html.AntiForgeryToken()
                        @using (Html.BeginForm("Index", "LoginAdmin", FormMethod.Post))
                        {
                        <fieldset>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })                         
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Tên đăng nhập", @type = "text" })
                                @*@Html.ValidationMessageFor(model=>model.UserName,"", new { @class = "alert alert-danger" })*@
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @type = "password" })
                                @*@Html.ValidationMessageFor(model => model.Password,"", new { @class = "alert alert-danger" })*@
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-lg btn-success btn-block">Đăng nhập</button>
                        </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Core Scripts - Include with every page -->
    <script src="~/Assets/Admin/js/jquery-1.10.2.js"></script>
    <script src="~/Assets/Admin/js/bootstrap.min.js"></script>
    <script src="~/Assets/Admin/js/plugins/metisMenu/jquery.metisMenu.js"></script>

    <!-- SB Admin Scripts - Include with every page -->
    <script src="~/Assets/Admin/js/sb-admin.js"></script>

</body>

</html>

