@model Model.EF.Content

@{
    ViewBag.Title = "Tạo mới bài viết";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin/LayoutHomeAdmin.cshtml";
}

@section jsFooter{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtSelectImage').val(url);
            };
            finder.popup();
        })
        var editor = CKEDITOR.replace('txtDetail', {
            customConfig: '/Assets/Admin/pluggin/ckeditor/config.js',
        })
    </script>
}
@section Header{
    <h3 style="color:red;">
        Xin chào,
        @{
            var session = (ShopNAD.Areas.Admin.Models.AdminModel)Session[ShopNAD.Common.ConstSession.SessionUser];
            if (session != null)
            {
                @session.UserName;
            }
        }
    </h3>
}
<h3>Tạo mới bài viết</h3>

