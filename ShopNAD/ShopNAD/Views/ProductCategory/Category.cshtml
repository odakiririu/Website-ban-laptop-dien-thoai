@model List<Model.EF.Product>
@{
    var category = (Model.EF.ProductCategory)ViewBag.Category;
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="content_top">
    <div class="heading">
        <h3>Tất cả sản phẩm :@category.NameProductCategory </h3>
    </div>
    <div class="see">
        <p><a href="#">Xem tất cả sản phẩm</a></p>
    </div>
    <div class="clear"></div>
</div>
<div class="section group">
    @foreach (var item in Model)
    {
        var url = "/chi-tiet/" + item.MetaTitle + "-" + item.IDProduct;
        <div class="grid_1_of_4 images_1_of_4">
            <a href="@url"><img src="@item.Images" alt="" /></a>
            <h2>@item.NameProduct</h2>
            <div class="price-details">
                <div class="price-number">
                    <p><span class="rupees">@item.Price.ToString("N0")</span></p>
                </div>
                <div class="add-cart">
                    <h4><a href="/them-gio-hang?productId=@item.IDProduct&quantity=1">Thêm vào giỏ</a></h4>
                </div>

            </div>
        </div>
    }
</div>
